
 <div class="well">
 	 <div style="width: 20%">
 	 	<%= link_to "New Organization", new_organization_path, class: "dbtn big twitter-big no-image btn-block"  %>	</div>
	                    	<div class="header">Organization Table <a class="headerclose"><i class="fa fa-times pull-right"></i></a> <a class="headerrefresh"><i class="fa fa-refresh pull-right"></i></a> <a class="headershrink"><i class="fa fa-chevron-down pull-right"></i></a></div>
	                    	<div class="table-responsive">
	                    		<table class="table table-hover">
	                                <thead>
	                                    <tr>
	                                        <th>Email</th>
	                                        <th>Date registered</th>
	                                        <th>Name</th>
	                                        <th>Status</th>
	                                        <th></th>
	                                    </tr>
	                                </thead>
	                                <tbody>
	                                	<% @organizations.each do |organization| %>
		                                    <tr>
		                                        <td><%= organization.email %> </td>
		                                        <td><%= organization.created_at.strftime("%Y/%m/%d") %></td>
		                                        <td><%= organization.name.try(:humanize) %></td>               
		                                        <td><%= organization.status %></td>               
		                                        <td>
		                                        	<%= link_to "Show", organization_path(organization) %>
		                                        </td>                              
		                                    </tr>
	                                    <% end %>
	                                    
	                                </tbody>
	                            </table>
	                    	</div>
	                    </div>

