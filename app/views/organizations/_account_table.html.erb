 <div class="well">
  	<div style="width: 20%">
 	 	<%= link_to "Add Account", new_organization_organization_account_path(@organization), class: "dbtn big twitter-big no-image btn-block"  %>	
 	</div>
 	
	<div class="header">Account Table </div>

	<div class="table-responsive">
		<table class="table table-hover">
	        <thead>
	            <tr>
	                <th>Name</th>
	                <th>Notes</th>
	                <th>Date registered</th>
	                
	                <th></th>
	            </tr>
	        </thead>
	        <tbody>
	        	<% @organization.accounts.each do |account| %>
	                <tr>
	                    <td><%= account.name %> </td>
	                    <td><%= account.general_note %> </td>
	                    <td><%= account.created_at.strftime("%Y/%m/%d") %></td>
	                                                                
	                    <td>
	                    	<%= link_to "Show", organization_organization_account_path(@organization,account) %>
	                    </td>                              
	                </tr>
	            <% end %>
	            
	        </tbody>
	    </table>
	</div>
</div>