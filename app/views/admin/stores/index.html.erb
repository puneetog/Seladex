
 <div class="well">
 	 <div style="width: 20%">
 	 	<%= link_to "New Store", new_admin_store_path, class: "dbtn big twitter-big no-image btn-block"  %>	</div>
	                    	<div class="header">Store Table <a class="headerclose"><i class="fa fa-times pull-right"></i></a> <a class="headerrefresh"><i class="fa fa-refresh pull-right"></i></a> <a class="headershrink"><i class="fa fa-chevron-down pull-right"></i></a></div>
	                    	<div class="table-responsive">
	                    		<table class="table table-hover">
	                                <thead>
	                                    <tr>
	                                        <th>Name</th>
	                                        <th>Date registered</th>
	                                        <th>Email</th>
	                                        <th>Status</th>
	                                        <th></th>
	                                    </tr>
	                                </thead>
	                                <tbody>
	                                	<% @stores.each do |store| %>
		                                    <tr>
		                                        <td><%= store.email %> </td>
		                                        <td><%= store.created_at.strftime("%Y/%m/%d") %></td>
		                                        <td><%= store.name.try(:humanize) %></td>               
		                                        <td><%= store.store_status %></td>               
		                                        <td><%= link_to "Edit", edit_admin_store_path(store) %></td>                              
		                                    </tr>
	                                    <% end %>
	                                    
	                                </tbody>
	                            </table>
	                    	</div>
	                    </div>

